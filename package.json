{
  "name": "poll-generation-app",
  "version": "1.0.0",
  "description": "Full-stack Poll Generation Application with Express/TypeScript backend and React/Vite frontend",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter backend --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "pnpm --filter backend start",
    "install:all": "pnpm install",
    "postbuild": "cpx _redirects dist"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "cpx": "^1.5.0",
    "pnpm": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
